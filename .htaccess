# .htaccess example

# Ensure that .htaccess files can override server settings
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Handle requests for files and directories directly
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Rewrite everything else to index.html
    RewriteRule ^(.*)$ index.html [L,QSA]
</IfModule>

# Allow access from all user agents including W3C Validator
Order allow,deny
Allow from all
Satisfy any

# Specific rule to allow the W3C Validator
SetEnvIf User-Agent "W3C_Validator" allow_w3c_validator

<FilesMatch ".*">
    Order Deny,Allow
    Deny from all
    Allow from env=allow_w3c_validator
</FilesMatch>

# Prevent directory listing
Options -Indexes
